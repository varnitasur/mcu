node {
 try  {
 notify('Job Started') 
 
 stage('Git-Checkout') {
   git 'https://github.com/varnitasur/mindtree-2019.git'
  }
    
 def project_path="01-Jenkins/Code/petclinic"
 
 dir(project_path) {
 
 stage('create artifact folder to store artifact'){
    sh label: '', script: "mkdir warstorage"
    }
    
 stage('Jfrog Artifactory download'){
    def server= Artifactory.server 'Artifactory'
    def downloadSpec = """{
    "files": [
    {
      "pattern": "bikes/*.war",
      "target": "/root/.jenkins/workspace/QA/02-Docker/warstorage/"
      
    }
    ]
    }"""
    server.download(downloadSpec)
   
}
   stage('Docker-Stage-Deployment') {
   sh label: '', script: 'docker-compose up -d --build'
  }
  
  stage ('Deploy approval'){
	input "Deploy to production ?"
	} 
 }


notify('Job Completed')   
} catch (err) {
  notify("Error ${err}")
  currentBuild.result = 'FAILURE'
}
}



def notify(status){
    emailext (
	to: "varnitasur@gmail.com",
	subject: "${status}: Job '${env.JOB_NAME} [${env.BUILD_NUMBER}]'",
	 body: """<p>${status}: Job '${env.JOB_NAME} [${env.BUILD_NUMBER}]':</p>
	<p>Check console output at <a href='${env.BUILD_URL}'>${env.JOB_NAME} [${env.BUILD_NUMBER}]</a></p>""",
		)
	}
